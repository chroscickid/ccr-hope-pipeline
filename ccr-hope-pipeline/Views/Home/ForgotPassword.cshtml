@model ccr_hope_pipeline.Models.ForgotAccount;
@{
    ViewData["Title"] = "GenerateReports";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	@*@<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">*@
	<link href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<style type="text/css">
       body {
			font-family: 'Arial', sans-serif;
		}

        input[type=text], input[type=email] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .submit {
            background-color: #09335e;
            color: white;
            padding: 10px 18px;
            width: auto;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            color: white;
            background-color: #f44336;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3> Forgot Password</h3>
        <p> </p>
        &nbsp;
        <p> </p>
        <p> </p>
        <form asp-controller="Account" asp-action="SendForgotPassEmail" method="post">
            <p> </p>
            <label for="email"> <b> Email Address:</b> </label>
            <p> </p>
            <input type="text" placeholder="Enter Email" name="email" asp-for="email" required>
            <p></p>
            <button type="button" name="cancel" onclick="javascript:history.back().style.display='none'" class="cancelbtn" OnClientClick="JavaScript:window.history.back(1);return false;"> Cancel </button>
            &nbsp;&nbsp;
            <button type="submit" class="submit">Submit</button>
            <p> </p>
        </form>
    </div>
</body>
</html>